@{
    ViewData["Title"] = "LISTA DE PRODUCTOS";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f4f8;
            color: #333;
            margin: 0;
            padding: 0;
        }
        h1, h2 {
            color: #0044cc;
            text-align: center;
            margin-top: 20px;
            font-weight: 700;
            font-size: 2em;
        }
        .product-catalog {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            margin: 20px auto;
            max-width: 1200px;
        }
        .product-card {
            background-color: #fff;
            border: 1px solid #ddd;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            margin: 10px;
            padding: 15px;
            text-align: center;
            width: 220px;
            transition: transform 0.3s, box-shadow 0.3s;
            animation: fadeIn 0.5s ease-in-out;
        }
        .product-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 16px rgba(0,0,0,0.2);
        }
        .product-card img {
            border-radius: 10px;
            height: 150px;
            width: 150px;
        }
        .product-card h3 {
            font-size: 1.3em;
            margin: 10px 0;
            color: #0044cc;
            font-weight: 700;
        }
        .product-card p {
            font-size: 1em;
            color: #555;
            font-weight: 400;
        }
        .form-group {
            max-width: 600px;
            margin: 20px auto;
        }
        .form-group label {
            font-weight: 700;
            font-size: 1.1em;
        }
        .form-control {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
        }
        .btn-primary {
            background-color: #0044cc;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            font-size: 1.1em;
            font-weight: 700;
        }
        .btn-primary:hover {
            background-color: #0033aa;
        }
        .separator {
            border-top: 3px solid #0044cc;
            margin: 40px auto;
            width: 80%;
        }
        .comments-section {
            background-color: #e0ebf8;
            padding: 40px 0;
            text-align: center;
        }
        
    </style>
</head>
<body>
    <h1>@ViewData["Title"]</h1>

    <div class="product-catalog">
        <div class="product-card">
            <img src="/img/air1.png" alt="Audífonos 1">
            <h3>Audífonos 1</h3>
            <p>Audífonos inalámbricos con sonido de alta calidad y batería de larga duración.</p>
        </div>
        <div class="product-card">
            <img src="/img/air2.png" alt="Audífonos 2">
            <h3>Audífonos 2</h3>
            <p>Audífonos deportivos resistentes al agua, perfectos para entrenamientos intensos.</p>
        </div>
        <div class="product-card">
            <img src="/img/air3.png" alt="Audífonos 3">
            <h3>Audífonos 3</h3>
            <p>Audífonos con cancelación de ruido y cómodas almohadillas para largas sesiones de uso.</p>
        </div>
        <div class="product-card">
            <img src="/img/au1.png" alt="Audífonos 4">
            <h3>Audífonos 4</h3>
            <p>Audífonos con micrófono integrado, ideales para videollamadas y juegos.</p>
        </div>
        <div class="product-card">
            <img src="/img/au2.png" alt="Audífonos 5">
            <h3>Audífonos 5</h3>
            <p>Audífonos plegables y ligeros, perfectos para llevar a cualquier lugar.</p>
        </div>
        <div class="product-card">
            <img src="/img/au3.png" alt="Audífonos 6">
            <h3>Audífonos 6</h3>
            <p>Audífonos con sonido envolvente, ofreciendo una experiencia inmersiva.</p>
        </div>
        <div class="product-card">
            <img src="/img/au4.png" alt="Audífonos 7">
            <h3>Audífonos 7</h3>
            <p>Audífonos con diseño ergonómico para una comodidad durante todo el día.</p>
        </div>
        <div class="product-card">
            <img src="/img/case1.png" alt="Funda 1">
            <h3>Funda 1</h3>
            <p>Funda protectora de silicona para smartphone, resistente a impactos.</p>
        </div>
        <div class="product-card">
            <img src="/img/case2.png" alt="Funda 2">
            <h3>Funda 2</h3>
            <p>Funda transparente que resalta el diseño original del teléfono.</p>
        </div>
        <div class="product-card">
            <img src="/img/case3.png" alt="Funda 3">
            <h3>Funda 3</h3>
            <p>Funda robusta con soporte, perfecta para ver videos cómodamente.</p>
        </div>
        <div class="product-card">
            <img src="/img/case4.png" alt="Funda 4">
            <h3>Funda 4</h3>
            <p>Funda elegante con acabado de cuero, proporcionando un toque sofisticado.</p>
        </div>
        <div class="product-card">
            <img src="/img/mopu4.png" alt="Mouse 1">
            <h3>Mouse 1</h3>
            <p>Mouse ergonómico con sensor óptico de alta precisión para gaming.</p>
        </div>
        <div class="product-card">
            <img src="/img/mou1.png" alt="Mouse 2">
            <h3>Mouse 2</h3>
            <p>Mouse inalámbrico con batería recargable y diseño compacto.</p>
        </div>
        <div class="product-card">
            <img src="/img/mou2.png" alt="Mouse 3">
            <h3>Mouse 3</h3>
            <p>Mouse con múltiples botones programables, ideal para trabajos de oficina.</p>
        </div>
    </div>

    <div class="separator"></div>

    <div class="comments-section">
        <h2>APARTADO DE COMENTARIOS</h2>
        <form asp-controller="ML" asp-action="Predict" method="post">
            <div class="form-group">
                <label for="sentimiento">Escribe tu opinión sobre los productos:</label>
                <input type="text" class="form-control" id="sentimiento" name="sentimiento" />
            </div>
            <p>&nbsp;</p>
            <button type="submit" class="btn btn-primary">Enviar</button>
            <p>&nbsp;</p>
        </form>
        @if (ViewData["Sentimiento"] != null)
        {
            <h2>RESULTADO DE LA PREDICCIÓN</h2>
            <p>PUNTAJE : @ViewData["Score"]</p>
        }
    </div>
</body>
</html>
